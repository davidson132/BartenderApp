@model Bartender


<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-5">
        <div class="row">
            <h2 class="text-info">Edit Drink</h2>
        </div>
        <br />
        <div class="row">
            <div class="col-8">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="DrinkName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DrinkName" class="form-control" />
                        <span asp-validation-for="DrinkName" class="text-danger"></span>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                </div>
                
                <br />

                <div class="row">
                    <div class="col offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-primary w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">

            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}